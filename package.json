{
  "name": "kodifaj-app",
  "version": "1.0.0",
  "engines": {
    "node": "12.4.0"
  },
  "proxy": {
    "/api/*": {
      "target": "http://localhost:3000"
    }
  },
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "heroku-postbuild": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js -p $PORT"
  },
  "dependencies": {
    "@nestjs/common": "7.0.2",
    "@nestjs/core": "7.0.2",
    "@nestjs/mongoose": "6.4.0",
    "@nestjs/passport": "7.0.0",
    "@nestjs/platform-express": "7.0.2",
    "@types/react-syntax-highlighter": "^11.0.4",
    "@zeit/next-css": "^1.0.1",
    "autoprefixer": "9.7.4",
    "axios": "0.19.2",
    "body-parser": "^1.19.0",
    "clsx": "1.1.0",
    "cookie-session": "1.4.0",
    "cross-env": "7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "final-form": "4.18.7",
    "final-form-arrays": "^3.0.1",
    "isomorphic-unfetch": "^3.0.0",
    "mongoose": "5.9.4",
    "nest-next": "9.2.0",
    "next": "9.3.0",
    "nodemon": "2.0.2",
    "nuka-carousel": "4.6.6",
    "passport": "^0.4.0",
    "passport-github2": "^0.1.11",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-final-form": "6.3.5",
    "react-final-form-arrays": "^3.1.1",
    "react-icons": "^3.8.0",
    "react-markdown": "4.3.1",
    "react-syntax-highlighter": "12.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "6.5.4",
    "tailwindcss": "1.2.0",
    "ts-node": "8.6.2"
  },
  "devDependencies": {
    "typescript": "3.8.3",
    "lint-staged": "10.0.8",
    "husky": "4.2.3",
    "prettier": "^1.19.1",
    "@types/cookie-session": "2.0.38",
    "@types/express": "4.17.2",
    "@types/mongoose": "5.7.6",
    "@types/passport": "1.0.3",
    "@types/passport-github2": "^1.2.4",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2
  }
}
